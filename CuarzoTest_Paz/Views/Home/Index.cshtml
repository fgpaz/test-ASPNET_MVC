@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col-lg-6 col-lg-offset-3">

    </div>
</div>

<div class="container">
    Tabla Productos
    <div style="overflow: auto;" class="row">
        <div class="container">
            <table class="table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                    <th scope="col" style="font-size: 17px;">
                        <p class="d-flex justify-content-center">ID</p>
                    </th>
                    <th scope="col" style="font-size: 17px;">
                        <p class="d-flex justify-content-center">Nombre</p>
                    </th>
                    <th scope="col" style="font-size: 17px;">
                        <p class="d-flex justify-content-center">Precio</p>
                    </th>
                    <th scope="col" style="font-size: 17px;">
                        <p class="d-flex justify-content-center">Categoría</p>
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td style="font-size: 15px; font-weight: 600;">@usuario.Nombre</td>
                        <td style="font-size: 15px; font-weight: 600;">@usuario.Email</td>
                        <td style="font-size: 15px; font-weight: 600;">
                            @(usuario.IdEmpresaNavigation?.RazonSocial ?? "Sin asignar")
                        </td>
                        <td style="text-align:center">
                            <label class="switch ">
                                <input type="checkbox" @(usuario.Activo ? "checked='checked'" : "") disabled>
                                <span class="slider round"></span>
                            </label>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
"Server=localhost\TEST;Database=BDCrudTest;Trusted_Connection=true"